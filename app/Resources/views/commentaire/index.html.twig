{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commentaires list</h1>

    <table>
        <thead>
            <tr>
{#                <th>Id</th>#}
                <th>Commentcontent</th>
                <th>Commentdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

        {% for commentaire in commentaires %}

            <tr>
                <td><a href="{{ path('comment_show', { 'id': commentaire.id }) }}">{{ commentaire.id }}</a></td>
                <td>{{ commentaire.commentContent }}</td>
                <td>{% if commentaire.commentDate %}{{ commentaire.commentDate|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('comment_show', { 'id': commentaire.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('comment_edit', { 'id': commentaire.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('comment_new') }}">Create a new commentaire</a>
        </li>
    </ul>
{% endblock %}
